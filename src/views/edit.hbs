<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card card-body bg-dark p-4 text-white rounded-0">
        <form action="/tasks/{{task._id}}/edit" method="POST">
          <h2>Update task</h2>
          <div class="mb-3">
            <input
              type="text"
              name="title"
              placeholder="title"
              value="{{task.title}}"
              class="form-control rounded-0"
            />
          </div>
          <div class="mb-3">
            <textarea
              name="description"
              placeholder="Add a description"
              rows="3"
              class="form-control rounded-0"
            >{{task.description}}</textarea>
          </div>
          <button class="btn btn-primary">Update</button>
        </form>
      </div>
    </div>
  </div>
</div>